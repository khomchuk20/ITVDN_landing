-var socialIcons = ['facebook-official', 'twitter', 'instagram', 'linkedin']
-var socialUrls = ['facebook.com', 'twitter.com', 'instagram.com', 'linkedin.com']

footer.footer
    .footer__top
        .container
            .title
                h2.title__header Get in touch
            
            .footer__social
                each item, key in socialIcons
                    a(href = 'http://' + socialUrls[key] target = '_blank' title = socialUrls[key]).footer__link
                        i(class ='fa fa-' + item aria-hidden="true").footer__icon
                            span.visually-hidden=item

            .footer__text Subscribe to our newsletter to stay update with what is new

            form.footer__form(action='#' method='post')
                input(type='email' placeholder = 'Email Address').footer__input
                button.button.button--transparent(type='submit') Subscribe
    .footer__bottom
